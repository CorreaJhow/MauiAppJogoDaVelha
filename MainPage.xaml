<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppJogoDaVelha.MainPage">

    <!-- Define o background em gradient (degrade) -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="White" Offset="0.3"/>
            <GradientStop Color="Purple" Offset="1.1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="80"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="BorderColor" Value="Black"/>
            <Setter Property="BorderWidth" Value="1"/>
        </Style>
    </ContentPage.Resources>

    <!-- Define o grid da pagina -->
    <!-- RowDefinitions divide em linhas iguais com o asterisco e o ColumnDefinitions em colunas -->
    <Grid RowDefinitions="*, *, *, *"
          RowSpacing="10"
          ColumnDefinitions="*, *, *" 
          ColumnSpacing="10" Margin="10">

        <Label Grid.Row="0" Grid.Column="0" 
                   Grid.ColumnSpan="3" 
                   Text="Jogo Da Velha"/>

        <Button x:Name="btn10" Grid.Row="1" Grid.Column="0" Clicked="Button_Clicked"/>
        <Button x:Name="btn12" Grid.Row="1" Grid.Column="1" Clicked="Button_Clicked"/>
        <Button x:Name="btn13" Grid.Row="1" Grid.Column="2" Clicked="Button_Clicked"/>


        <Button x:Name="btn20" Grid.Row="2" Grid.Column="0" Clicked="Button_Clicked"/>
        <Button x:Name="btn21" Grid.Row="2" Grid.Column="1" Clicked="Button_Clicked"/>
        <Button x:Name="btn23" Grid.Row="2" Grid.Column="2" Clicked="Button_Clicked"/>


        <Button x:Name="btn30" Grid.Row="3" Grid.Column="0" Clicked="Button_Clicked"/>
        <Button x:Name="btn31" Grid.Row="3" Grid.Column="1" Clicked="Button_Clicked"/>
        <Button x:Name="btn32" Grid.Row="3" Grid.Column="2" Clicked="Button_Clicked"/>

    </Grid>

</ContentPage>
